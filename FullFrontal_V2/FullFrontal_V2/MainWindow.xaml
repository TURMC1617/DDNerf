<Window x:Class="FullFrontal_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullFrontal_V2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517">
            <TabItem Header="Setup">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="CV" Visibility="Visible">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="camera_option" HorizontalAlignment="Left" VerticalAlignment="Top" Width="49">
                        <ComboBoxItem x:Name="usb_zero" Content="USB0"></ComboBoxItem>
                        <ComboBoxItem x:Name="usb_one" Content="USB1"></ComboBoxItem>
                        
                        
                    </ComboBox>
                    <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="49,2,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
